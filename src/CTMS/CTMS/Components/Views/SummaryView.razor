@using Newtonsoft.Json
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Inputs
@layout EmptyLayout
@inject UploadFileService UploadFileService

<style>
    /* 調整整體 CheckBox 大小 */
    .e-checkbox-wrapper {
        transform: scale(1.5); /* 整體放大 1.5 倍 */
        margin: 10px; /* 增加間距避免重疊 */
    }

        /* 調整文字大小 */
        .e-checkbox-wrapper .e-label {
            font-size: 20px; /* 設定文字大小 */
            padding-left: -10px; /* 調整文字與勾選框的間距 */
        }

        /* 調整勾選框本身的大小 */
        .e-checkbox-wrapper .e-checkbox {
            height: 20px;
            width: 20px;
        }

    .title-header {
        width: 400px;
    }
</style>
<div class="w-100">
    <div class="header">
        <img src="/Images/team.png" alt="TSG Hawks Logo">
        <div class="title">
            <div class="title-header">台鋼雄鷹健康檢查專案</div>
            <SfCheckBox Label="前測" @bind-Checked="data.前測結果摘要" CssClass="mx-4"></SfCheckBox>
            <SfCheckBox Label="後測" @bind-Checked="data.後測結果摘要" CssClass="mx-4"></SfCheckBox>
            <span class="ms-3">結果摘要</span>
        </div>
        <img src="/Images/nckuh.png" alt="NCKU Logo">
    </div>

    <table>
        <tr>
            <th rowspan="2" class="green-bg w-25">姓名</th>
            <td rowspan="2" class="w-25 green-bg-value">@CTMSModel.Home首頁2.姓名</td>
            <th class="green-bg w-25">年齡</th>
            <td class="green-bg-value">@CTMSModel.Home首頁2.真實年齡</td>
        </tr>
        <tr>
            <th class="green-bg w-25">身高</th>
            <td class="green-bg-value">@CTMSModel.Home首頁2.身高 公分</td>
        </tr>
        <tr>
            <th rowspan="2" class="green-bg w-25">守備位置</th>
            <td rowspan="2" class="w-25 green-bg-value">@CTMSModel.Home首頁2.擔任位置</td>
            <th class="green-bg w-25">體重</th>
            <td class="green-bg-value">@CTMSModel.Home首頁2.體重 公斤</td>
        </tr>
        <tr>
            <th class="green-bg w-25">BMI</th>
            <td class="green-bg-value">@CTMSModel.Home首頁2.BMI</td>
        </tr>
    </table>

    <table>
        <tr>
            <th class="green-bg-item">項目</th>
            <th class="green-bg-item">分析結果</th>
            <th class="green-bg-item">建議</th>
        </tr>
        <tr>
            <td>基因體學檢查</td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='基因體學檢查 分析結果' @bind-Value=data.基因體學檢查分析結果></SfTextBox></td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='基因體學檢查 建議' @bind-Value=data.基因體學檢查建議></SfTextBox></td>
        </tr>
        <tr>
            <td>肌肉組成檢查</td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='肌肉組成檢查 分析結果' @bind-Value=data.肌肉組成檢查分析結果></SfTextBox></td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='肌肉組成檢查 建議' @bind-Value=data.肌肉組成檢查建議></SfTextBox></td>
        </tr>
        <tr>
            <td>代謝失調風險</td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='代謝失調風險 分析結果' @bind-Value=data.代謝失調風險分析結果></SfTextBox></td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='代謝失調風險 建議' @bind-Value=data.代謝失調風險建議></SfTextBox></td>
        </tr>
        <tr>
            <td>運動代謝體</td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='運動代謝體 分析結果' @bind-Value=data.運動代謝體分析結果></SfTextBox></td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='運動代謝體 建議' @bind-Value=data.運動代謝體建議></SfTextBox></td>
        </tr>
        <tr>
            <td>生化檢查結果</td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='生化檢查結果 分析結果' @bind-Value=data.生化檢查結果分析結果></SfTextBox></td>
            <td><SfTextBox CssClass="e-bigger" Placeholder='生化檢查結果 建議' @bind-Value=data.生化檢查結果建議></SfTextBox></td>
        </tr>
    </table>

    <table>
        <tr>
            <th class="green-bg w-25">解說醫師</th>
            <td class="w-25"><SfTextBox CssClass="e-bigger" Placeholder='解說醫師' @bind-Value=data.解說醫師></SfTextBox></td>
            <th class="green-bg w-25">輸入日期</th>
            <td class="w-25"><SfTextBox CssClass="e-bigger" Placeholder='輸入日期' @bind-Value=data.輸入日期></SfTextBox></td>
        </tr>
    </table>
</div>

@code {
    [Parameter]
    public string Code { get; set; }
    [Parameter]
    public NextGenerationSportsCTMSModel CTMSModel { get; set; } 
    報告摘要Model data = new();

    bool isSmallChecked = true;
    protected override async Task OnInitializedAsync()
    {
        // data = CTMSModel.報告摘要Model;
        // data.代謝失調風險分析結果 = "代謝失調風險分析結果";
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            data = CTMSModel.報告摘要Model;
            StateHasChanged();
        }
    }
}