                    </tr>
                    <tr>
                        <td class="normal-cell">
                            @if (editMode)
                            {
                                <SfTextBox @bind-Value="data.FallopianTubeLeft" />
                            }
                            else
                            {
                                    @data.FallopianTubeLeft
                            }
                        </td>
                        <td class="normal-cell">
                            @if (editMode)
                            {
                                <SfTextBox @bind-Value="data.Vagina" />
                            }
                            else
                            {
                                    @data.Vagina
                            }
                        </td>
                        <td class="normal-cell">
                            @if (editMode)
                            {
