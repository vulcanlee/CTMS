@* 風險評估視圖 *@

<div class="risk-assessment-container">

    <div class="content-wrapper">
        <div class="left-panel">
            <div class="research-group-panel">
                <div class="panel-header">研究組</div>
                <div class="panel-content">
                    <p>本個案為<span class="highlight">研究組</span></p>
                    <p class="no-need"><strong>不需</strong>使用AI輔助決策系統</p>
                </div>
            </div>

            <div class="ai-result-panel">
                <div class="panel-header">AI輔助決策系統結果</div>
                <table class="ai-result-table">
                    <tr>
                        <td>風險程度</td>
                        <td>高風險</td>
                    </tr>
                    <tr>
                        <td>是否需要降15%劑量</td>
                        <td>需要</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="center-panel">
            <div class="details-panel">
                <div class="panel-header">詳細內容</div>
                <table class="details-table">
                    <tr>
                        <td>骨骼肌指標(SMI)</td>
                        <td>???</td>
                    </tr>
                    <tr>
                        <td>骨骼肌密度(SMD)</td>
                        <td>???(HU)</td>
                    </tr>
                    <tr>
                        <td>肌間/肌肉脂肪組織(IMAT)</td>
                        <td>???(平方公分)</td>
                    </tr>
                    <tr>
                        <td>低密度肌肉區域(LAMA)</td>
                        <td>???(平方公分)</td>
                    </tr>
                    <tr>
                        <td>正常密度肌肉區域(NAMA)</td>
                        <td>???(平方公分)</td>
                    </tr>
                    <tr>
                        <td>肌肉脂肪變性(Myosteatosis)</td>
                        <td>???(平方公分)</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="right-panel">
            <div class="scan-images">
                <img src="/images/scan-image-1.png" alt="CT掃描影像1" class="scan-image" />
                <img src="/images/scan-image-2.png" alt="CT掃描影像2" class="scan-image" />
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnBackClick { get; set; }

    private async Task NavigateBack()
    {
        await OnBackClick.InvokeAsync();
    }
